@model GateFall.Models.Card

<div class="container text-center mt-5">
    <h1 class="display-4 fw-bold text-success mb-4">🏆 ŞAMPİYON 🏆</h1>
    
    <div class="card shadow-lg mx-auto" style="max-width: 500px;">
        <img src="~/images/cards/@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
        <div class="card-body">
            <h2 class="card-title">@Model.Name</h2>
            <p class="card-text text-muted">Bu zorlu mücadelenin galibi!</p>
        </div>
    </div>

    <div class="mt-5 d-grid gap-2 d-sm-flex justify-content-center">
        <a asp-controller="Game" asp-action="Start" asp-route-deckId="@Model.DeckId" class="btn btn-primary btn-lg px-4 gap-3">
            <i class="bi bi-arrow-repeat"></i> Tekrar Oyna
        </a>
        
        <a asp-controller="Deck" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
            <i class="bi bi-house-door"></i> Başka Deste Seç
        </a>
    </div>
</div>

<style>
    body {
        background: linear-gradient(to bottom, #f0f9ff, #cbebff);
    }
</style>