@model IEnumerable<GateFall.Models.Deck>

<div class="container mt-5">
    <h2 class="mb-4">Destelerim</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Henüz hiç deste oluşturmadın. <a asp-action="Create" class="alert-link">Hemen bir tane yarat!</a>
        </div>
    }
    else
    {
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Kapak</th>
                    <th>Başlık</th>
                    <th>Kart Sayısı</th>
                    <th>Tarih</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/images/decks/@item.CoverImageUrl" style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px;" />
                        </td>
                        <td class="fw-bold">@item.Title</td>
                        <td>
                            <span class="badge bg-secondary">@item.Cards.Count</span>
                        </td>
                        <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Yönet</a>
    
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-dark" title="Düzenle">Düzenle<i class="bi bi-pencil"></i></a>

                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Bu desteyi ve içindeki tüm kartları silmek istediğine emin misin?');">
                                <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>